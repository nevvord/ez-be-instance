{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@api/*": ["api/*"],
      "@config/*": ["config/*"],
      "@db/*": ["db/*"],
      "@services/*": ["services/*"],
      "@shared/*": ["shared/*"],
      "@api": ["api"],
      "@config": ["config"],
      "@db": ["db"],
      "@services": ["services"],
      "@shared": ["shared"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
